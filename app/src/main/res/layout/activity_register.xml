<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f547913506441f4eea53b3076c75f179"
    android:textAlignment="center"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/userPassword2"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        android:backgroundTint="#D7FFFFFF"
        android:ems="10"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPassword" />

    <EditText
        android:id="@+id/userPhone"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:layout_marginBottom="396dp"
        android:background="@color/white"
        android:backgroundTint="#D7FBF8F8"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPassword2"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:backgroundTint="#D7FBF8F8"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <EditText
        android:id="@+id/userSurnames"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:backgroundTint="#D7FBF8F8"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Apellidos"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintVertical_bias="0.508" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="252dp"
        android:text="He leído y acepto la política de privacidad"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/userName8"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:layout_marginBottom="316dp"
        android:background="@color/white"
        android:backgroundTint="#D7FBF8F8"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhone"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="259dp"
        android:layout_height="59dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="cursive"
        android:text="Crea tu nueva cuenta"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonRegistro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="176dp"
        android:layout_height="86dp"
        android:layout_marginTop="39dp"
        android:background="#CCCCCC"
        android:backgroundTint="#871A1A"
        android:backgroundTintMode="add"
        android:shadowColor="#6A4F4F"
        android:text="Registrarse"
        app:iconTint="#8A6D6D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox1"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#957979"
        app:strokeColor="#958989" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="149dp" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:backgroundTint="#D7FFFFFF"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="278dp" />

</androidx.constraintlayout.widget.ConstraintLayout>